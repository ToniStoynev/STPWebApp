@model STPTask.Models.InputModels.RegisterCompanyInputModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mt-3">Edit Company's Details</h1>
<form method="post" class="mx-auto w-50">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr class=" mt-3 hr2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.Name" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.CreationDate" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.CreationDate" class="form-control" />
            <span asp-validation-for="@Model.CreationDate" class="text-danger"></span>
        </div>
    </div>
    <hr class=" mt-3  hr2" />
    <div class="d-flex my-3 justify-content-between">
        <button type="submit" class="btn bg-dark text-white font-weight-bold mx-auto">Update Company's Details</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
