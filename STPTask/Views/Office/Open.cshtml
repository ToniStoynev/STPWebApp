@model STPTask.Models.InputModels.OpenOfficeInputModel
@{
    ViewData["Title"] = "Open";
}


<h1 class="text-center mt-3">Open New Office</h1>
<hr class="mt-3 hr-2" />
<form method="post" class="w-50 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.Country" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.Country" class="form-control" type="text" placeholder="Country..." />
            <span asp-validation-for="@Model.Country" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.City" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.City" class="form-control" type="text" placeholder="City..." />
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 hr-2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.Street" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.Street" class="form-control" placeholder="Street..." />
            <span asp-validation-for="@Model.Street" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.StreetNumber" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.StreetNumber" class="form-control" placeholder="Street Number..." />
            <span asp-validation-for="@Model.StreetNumber" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 hr-2" />
    <div class=" form-group  justify-content-center">
        <select asp-for="@Model.IsHeadquarter" class="form-control">
            <option value=true>Headquarter</option>
            <option value=false>Regular Office</option>
        </select>
        <span asp-validation-for="@Model.IsHeadquarter" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn bg-dark text-light">Open The Office</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}