@page
@model LoginModel

<h1 class="text-center mt-3">Login</h1>
<form method="post" class="mx-auto my-auto w-50">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr class=" mt-3 hr2" />
    <div class="d-flex justify-content-center">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Username" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Username" class="form-control bg-light" type="text" placeholder="Username" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Password" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group d-flex justify-content-center">
        <div class="checkbox">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>
    <hr class=" mt-3 hr2" />
    <div class="form-group d-flex justify-content-center">
        <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
    </div>
    <div class="form-group d-flex justify-content-center">
        <div>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </div>
    </div>
    <div class="d-flex my-5 justify-content-between">
        <button type="submit" class="btn bg-dark text-white font-weight-bold mx-auto">Login</button>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
